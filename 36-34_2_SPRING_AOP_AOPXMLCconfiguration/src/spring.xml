<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
				http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- <context:annotation-config /> -->
	<aop:aspectj-autoproxy />
	<aop:config>
		<aop:aspect id="loggingAspect" ref="loggingAspect">

			<aop:around method="myAroundAdvice"
				pointcut="execution(* get*())" />
		</aop:aspect>
	</aop:config>

	<bean name="loggingAspect"
		class="com.vinayparihar.spring.aop.aspect.LoggingAspect" />

	<bean id="shapeService"
		class="com.vinayparihar.spring.aop.service.impl.ShapeService"
		autowire="byName" />

	<bean id="circle" class="com.vinayparihar.spring.aop.model.Circle">
		<!-- <property name="name" value="Circle Name"></property> -->
	</bean>

	<bean id="triangle"
		class="com.vinayparihar.spring.aop.model.Triangle">
		<property name="name" value="Triangle Name"></property>
	</bean>

</beans>